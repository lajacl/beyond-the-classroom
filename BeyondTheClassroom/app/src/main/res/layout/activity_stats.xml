<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="us.bytc.beyondtheclassroom.StatsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/keyLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:background="@drawable/textviewblackborder"
            android:text="@string/dateForStatsText"
            android:textSize="24dp"
            android:padding="3dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="15dp"
            android:background="@drawable/textviewblackborder"
            android:text="@string/titleForStatsText"
            android:textSize="24dp"
            android:padding="3dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:background="@drawable/textviewblackborder"
            android:text="@string/minRecordedForStatsText"
            android:textSize="24dp"
            android:padding="3dp"
            android:textColor="@android:color/black"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/textviewblackborder"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/keyLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exampleDateText"
            android:textSize="16sp"
            android:textColor="#048faf"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exampleBookTitle"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exampleTimeReading"
            android:textSize="16sp"
            android:textColor="#052faf"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#d1d3d4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/statsScreenGoHomeButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/gohome_icon"/>

        <ImageView
            android:id="@+id/statsScreenScheduleButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/schedule_logo"/>

        <ImageView
            android:id="@+id/statsScreenReadButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/read_logo"/>

        <ImageView
            android:id="@+id/statsScreenLibraryButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/library_logo"/>

        <ImageView
            android:id="@+id/statsScreenMoreButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/more_logo"/>

    </LinearLayout>

</RelativeLayout>
