<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="us.bytc.beyondtheclassroom.ScheduleActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewblackborder"
        android:text="@string/scheduleTodayText"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_margin="12dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:id="@+id/dayScheduleText"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/scheduleLayout"
        android:layout_below="@id/dayScheduleText"
        android:layout_margin="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/textviewblackborder"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/twopm"
                android:textSize="16sp"
                android:textColor="#048faf"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name1"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allottedTimeText"
                android:textSize="16sp"
                android:textColor="#052faf"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/textviewblackborder"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/threepm"
                android:textSize="16sp"
                android:textColor="#048faf"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name2"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allottedTimeText"
                android:textSize="16sp"
                android:textColor="#052faf"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/textviewblackborder"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fourpm"
                android:textSize="16sp"
                android:textColor="#048faf"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name3"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/allottedTimeText"
                android:textSize="16sp"
                android:textColor="#052faf"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/textviewblackborder"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fivepm"
            android:textSize="16sp"
            android:textColor="#048faf"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name4"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/allottedTimeText"
            android:textSize="16sp"
            android:textColor="#052faf"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/bottomNavigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#d1d3d4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scheduleScreenStatsButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/stats_logo"/>

        <ImageView
            android:id="@+id/scheduleScreenGoBackButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/gohome_icon"/>

        <ImageView
            android:id="@+id/scheduleScreenReadButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/read_logo"/>

        <ImageView
            android:id="@+id/scheduleScreenLibraryButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/library_logo"/>

        <ImageView
            android:id="@+id/scheduleScreenMoreButton"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/statsTitle"
            android:src="@drawable/more_logo"/>

    </LinearLayout>
</RelativeLayout>
